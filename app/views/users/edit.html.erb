<% content_for :page_header, "Edit User" %>
<% if @user.first_name && @user.last_name %>
  <% content_for :page_description, "#{@user.first_name.titlecase} #{@user.last_name.titlecase}" %>
<% else %>
  <% content_for :page_description, "Unnamed User" %>
<% end %>

<%= render 'form', user: @user %>

<div class="row">
  <div class="col-md-offset-4 col-md-4 text-center">
    <%= link_to 'Show', @user %> | <%= link_to 'Back', users_path %>
  </div>
</div>