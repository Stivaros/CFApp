<% content_for :page_header, "Users" %>
<% content_for :page_description, "List of Users" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Registration Email</th>
      <th class="text-center">View User</th>
      <th class="text-center">Edit User</th>
      <th class="text-center">Delete User</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td class="info text-center"><%= link_to 'Show', user, class: 'btn btn-sm btn-primary' %></td>
        <td class="warning text-center"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-warning' %></td>
        <td class="danger text-center"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
