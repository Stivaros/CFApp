<% content_for :page_header, @product.name.capitalize %>
<% content_for :page_description, "Product information for #{@product.name}" %>
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-4">
      <%= image_tag(@product.image_url, class: 'img-responsive thumbnail') %>
  </div>
  <div class="col-md-7 col-md-offset-1">
    <div class="row">
      <div class="col-md-12">
        <p class="product-description"><%= @product.description %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p><%= @product.tier %></p>
        <p class="product-price">Â£ <%= @product.price %></p><br>
        <p>Average Rating: <div class="product-rated" data-score="<%= @product.average_rating %>"></div></p>
        <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning' %> |
        <%= link_to 'Back', products_path, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h3>Reviews</h3>
  </div>
</div>
<div class="well">
  <%= render 'new_comment' %>
  <%= render 'comments' %>
  <%= will_paginate @comments, class: 'text-center' %>
</div>