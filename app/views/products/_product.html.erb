<% cache @product do %>
  <% @products.each_slice(3) do |products| %>
    <div class="row equal">
      <% products.each do |product| %>
        <div class="col-md-4 item">
          <%= image_tag(product.image_url, class: 'img-responsive product-img') %>
          <p class="product-name"><%= link_to product.name, product, class: 'h2' %></p>
          <p class="product-index-description"><%= product.description %></p>
          <div class="row">
            <div class="col-xs-6 product-price-column">
              <p class="product-price">Â£ <%= product.price %></p>
            </div>
            <div class="col-xs-6">
              <p class="product-tier"><%= product.tier %></p>
            </div>
          </div>
          <p class="product-navigation-buttons"><%= link_to 'Show', product, class: 'btn btn-primary' %> <% if current_user && current_user.admin? %> <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></p> <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>